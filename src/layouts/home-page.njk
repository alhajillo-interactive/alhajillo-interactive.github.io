        {% include "components/language-selector.njk"%}
        <div id="info">
            {% include "components/navbar.njk" %}
            <div class="sections">
                <section class="section-tab" data-hash="about">
                    {% include "components/about.njk"%}
                </section>

                <section class="section-tab" data-hash="portfolio">
                    {% include "components/projects.njk"%}
                </section>
                <section class="section-tab" data-hash="contact-us">
                    {% include "components/contact.njk"%}
                </section>
            </div>
            {% include "components/footer.njk"%}
        </div>
    </body>
